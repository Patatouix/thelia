<?xml version="1.0" encoding="UTF-8" ?>

<config xmlns="http://thelia.net/schema/dic/config"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://thelia.net/schema/dic/config http://thelia.net/schema/dic/config/thelia-1.0.xsd">

    <loops>
        <loop name="schedules-product" class="Schedules\Loop\SchedulesProductLoop"/>
        <loop name="schedules-content" class="Schedules\Loop\SchedulesContentLoop"/>
    </loops>

    <forms>
        <!-- Product -->
        <form name="schedules.product.create" class="Schedules\Form\Product\SchedulesForm"/>
        <form name="schedules.product.update" class="Schedules\Form\Product\SchedulesFormUpdate"/>
        <form name="schedules.product.clone" class="Schedules\Form\Product\SchedulesFormClone"/>
        <!-- Content -->
        <form name="schedules.content.create" class="Schedules\Form\Content\SchedulesForm"/>
        <form name="schedules.content.update" class="Schedules\Form\Content\SchedulesFormUpdate"/>
        <form name="schedules.content.clone" class="Schedules\Form\Content\SchedulesFormClone"/>
    </forms>

    <commands>
        <!--
        <command class="Schedules\Command\MySuperCommand" />
        -->
    </commands>

    <hooks>
        <!-- add a tab for schedules on product-edit -->
        <hook id="schedules.back.hook" class="Schedules\Hook\BackHook">
            <tag name="hook.event_listener" event="product.tab" type="back" />
            <tag name="hook.event_listener" event="content.tab" type="back" />
            <tag name="hook.event_listener" event="product.edit-js" type="back" templates="js:assets/js/schedules.js" />
            <tag name="hook.event_listener" event="content.edit-js" type="back" templates="js:assets/js/schedules.js" />
        </hook>
    </hooks>

    <!--
    <exports>

    </exports>
    -->

    <!--
    <imports>

    </imports>
    -->
</config>