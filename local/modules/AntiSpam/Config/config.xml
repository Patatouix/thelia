<config xmlns="http://thelia.net/schema/dic/config"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://thelia.net/schema/dic/config http://thelia.net/schema/dic/config/thelia-1.0.xsd">

    <loops>
        <!-- sample definition
        <loop name="MySuperLoop" class="AntiSpam\Loop\MySuperLoop" />
        -->
    </loops>

    <forms>
        <!--
        <form name="MyFormName" class="AntiSpam\Form\MySuperForm" />
        -->
    </forms>

    <commands>
        <!--
        <command class="AntiSpam\Command\MySuperCommand" />
        -->
    </commands>

    <services>
        <service id="antispam.form" class="AntiSpam\EventListeners\FormAfterBuildListener" scope="request">
            <!-- <argument type="service" id="mailer" /> -->
            <!-- <argument type="service" id="thelia.token_provider" /> -->
            <argument type="service" id="request" />
            <tag name="kernel.event_subscriber" />
        </service>

         <service id="antispam.submit" class="AntiSpam\EventListeners\ContactSubmitListener" scope="request">
            <!-- <argument type="service" id="mailer" /> -->
            <!-- <argument type="service" id="thelia.token_provider" /> -->
            <argument type="service" id="request" />
            <tag name="kernel.event_subscriber" />
        </service>
    </services>

    <hooks>
        <hook id="antispam.hook">
            <tag name="hook.event_listener" event="contact.form-bottom" type="front" templates="render:antispam_fields.html" />
            <tag name="hook.event_listener" event="main.stylesheet" type="front" templates="css:assets/css/antispam.css" />
            <tag name="hook.event_listener" event="main.body-bottom" type="front" templates="js:assets/js/antispam.js" />
        </hook>
    </hooks>

