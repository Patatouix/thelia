<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <!--

    if a /admin/module/antispam/ route is provided, a "Configuration" button will be displayed
    for the module in the module list. Clicking this button will invoke this route.

    <route id="my_route_id" path="/admin/module/antispam">
        <default key="_controller">AntiSpam\Full\Class\Name\Of\YourConfigurationController::methodName</default>
    </route>

    <route id="my_route_id" path="/admin/module/antispam/route-name">
        <default key="_controller">AntiSpam\Full\Class\Name\Of\YourAdminController::methodName</default>
    </route>

    <route id="my_route_id" path="/my/route/name">
        <default key="_controller">AntiSpam\Full\Class\Name\Of\YourOtherController::methodName</default>
    </route>

    ...add as many routes as required.-->

    <route id="antispam.fake-validation" path="/module/antispam/contact/fake-validation" methods="GET">
        <default key="_controller">AntiSpam\Controller\ContactController::fakeValidation</default>
        <default key="_view">fake_validation</default>
    </route>

</routes>
